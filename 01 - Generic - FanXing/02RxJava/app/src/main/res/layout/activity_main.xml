<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_normal_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="传统方法下载图片"
        app:layout_constraintBottom_toTopOf="@id/btn_rx_download"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_test" />

    <Button
        android:id="@+id/btn_rx_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rx方法下载图片"
        app:layout_constraintBottom_toTopOf="@id/btn_rx_others"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_normal_download" />

    <Button
        android:id="@+id/btn_rx_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rx的其他用法"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_rx_download" />

</androidx.constraintlayout.widget.ConstraintLayout>